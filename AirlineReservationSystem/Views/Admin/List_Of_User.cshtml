@model List<AirlineReservationSystem.Models.User>
@{
    Layout = "_AdminLayout";
}

<div class="pagetitle">
    <h1>Users</h1>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">List Of Users</h5>

                    <!-- Table with stripped rows -->
                    <div class="table-responsive">
                        <table class=" datatable table table-hover">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>User Name</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                    <th>Phone Number</th>
                                    <th>Preferred Credit Card</th>
                                    <th>Credit Card Info</th>
                                    <th>SkyMiles</th>
                                    <th data-type="date" data-format="YYYY/DD/MM">Register Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                          <tbody>
                        <td><img src="~/image/user_placeholder.jpg" alt="Alternate Text" width="70%" /></td>
                        <td >User name</td>
                        <td>Email</td>
                        <td>Address</td>
                        <td>PhoneNumber</td>
                        <td>PreferredCreditCard</td>
                        <td>CreditCardInfo</td>
                        <td>SkyMiles</td>
                        <td data-type="date" data-format="YYYY/DD/MM"></td>
                        <td data-type="date">Action</td>
                        </tr>
                          </tbody>
                        </table>
                    </div>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>
